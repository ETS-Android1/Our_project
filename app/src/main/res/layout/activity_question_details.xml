<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".screens.QuestionDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="প্রশ্ন এর বিস্তারিত"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:textSize="20sp"
            android:layout_marginBottom="20dp"/>

        <ImageView
            android:id="@+id/question_imageView"
            android:layout_gravity="center"
            android:layout_width="200dp"
            android:layout_height="250dp"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/question_titleTV"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="প্রশ্ন"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_gravity="center"/>

        <LinearLayout
            android:gravity="center"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/question_dateTV"
                android:layout_width="0dp"
                android:layout_weight=".5"
                android:layout_height="wrap_content"
                android:text="তারিখ - "
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/question_adminTV"
                android:layout_width="0dp"
                android:layout_weight=".5"
                android:layout_height="wrap_content"
                android:text="প্রশ্ন করেছেন - "
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textAlignment="center"/>

        </LinearLayout>


        <TextView
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="প্রশ্ন এর বিস্তারিতঃ"
            android:textStyle="bold"
            android:textColor="#5A5959"/>

        <TextView
            android:id="@+id/question_detailsTV"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="পণ্য এর বিস্তারিতঃ"
            android:textColor="#5A5959"/>

        <View
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/questionCommentRecyclerView"/>


        <View
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000"/>

        <EditText
            android:id="@+id/question_commentET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_bg"
            android:padding="20dp"
            android:layout_margin="10dp"
            android:hint="আপনার মন্তব্য লিখুন..."
            android:textColorHint="#959292"
            android:inputType="text"
            android:textColor="#000"/>



        <Button
            android:id="@+id/question_commentAddBTN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="কমেণ্ট করুন"
            android:layout_gravity="right"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"/>



    </LinearLayout>

</ScrollView>