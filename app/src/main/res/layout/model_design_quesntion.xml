<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:layout_height="wrap_content"
    android:elevation="10dp"
    android:layout_margin="10dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="12dp"
    android:background="@color/white"
    android:backgroundTint="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:layout_gravity="center"
            android:layout_margin="-5dp"
            android:layout_width="0dp"
            android:src="@drawable/ic_baseline_question_answer_24"
            android:background="#8BC34A"
            android:scaleType="center"
            android:layout_weight=".1"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:padding="10dp"
            android:layout_width="0dp"
            android:layout_weight=".9"
            android:gravity="center"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/model_questionIDTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="প্রশ্নঃ ০১"
                android:textColor="#676262"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/model_question_titleTV"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="প্রশ্ন "
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black" />
            <TextView
                android:id="@+id/model_question_detailsTV"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="বিস্তারিত"
                android:maxLines="2"
                android:textColor="#676262" />

            <TextView
                android:id="@+id/model_question_dateTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="প্রকাশের তারিখঃ "
                android:textColor="#9C9A9A"
                android:textSize="12sp"
                android:drawableEnd="@drawable/ic_baseline_arrow_forward_ios_24"/>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/model_editIV"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".5"
                    android:src="@drawable/ic_baseline_edit_24"/>

                <ImageView
                    android:id="@+id/model_deleteIV"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".5"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_baseline_delete_24"/>


            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>