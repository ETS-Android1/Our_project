<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECE8E8"
    tools:context=".Home">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:paddingBottom="30dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:background="#59C831">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="37dp"
                        android:src="@drawable/weather"
                        android:textAlignment="center"

                        />

                    <TextView
                        android:id="@+id/tempTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="তাপমাত্রাঃ"
                        android:textAlignment="center"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingRight="20dp">

                    <TextView
                        android:id="@+id/time"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:gravity="center"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold"></TextView>
                </LinearLayout>

            </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="95dp"
            android:background="@drawable/top_round_bd"
            android:orientation="vertical"
            >
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="30dp">



                <!--       outer layout 1st-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <!--            middle part-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="10dp"
                        android:background="#ECE8E8"
                        android:orientation="vertical">
                        <!--                1st row -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/H_chasabad"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="10dp"
                                android:layout_weight="1"
                                android:elevation="10dp"
                                app:cardBackgroundColor="#FCFDFD"
                                app:cardCornerRadius="5dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight=".20"
                                        android:src="@drawable/img_chasabad2"

                                        ></ImageView>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight=".80"
                                        android:gravity="center"
                                        android:text="ফসল চাষ পদ্বতি"
                                        android:textColor="#3BC609"
                                        android:textSize="20sp"
                                        android:textStyle="bold"></TextView>

                                </LinearLayout>


                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/h_fishChash"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="10dp"
                                android:layout_weight="1"
                                android:elevation="10dp"
                                app:cardBackgroundColor="#DFFFFFFF"
                                app:cardCornerRadius="5dp">

                                <LinearLayout

                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight=".20"
                                        android:src="@drawable/img_fish2"

                                        ></ImageView>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight=".80"
                                        android:gravity="center"
                                        android:text="মৎস্য চাষ"
                                        android:textColor="#3BC609"
                                        android:textSize="20sp"
                                        android:textStyle="bold"></TextView>

                                </LinearLayout>


                            </androidx.cardview.widget.CardView>


                        </LinearLayout>

                        <!--                2nd row -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/kroyBikroi"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="10dp"
                                android:layout_weight="1"
                                android:elevation="10dp"
                                app:cardBackgroundColor="#FCFDFD"
                                app:cardCornerRadius="5dp">
                                >

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight=".20"
                                        android:src="@drawable/img_buy_sell"

                                        ></ImageView>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight=".80"
                                        android:gravity="center"
                                        android:text="ক্রয়  বিক্রয়"
                                        android:textColor="#3BC609"
                                        android:textSize="20sp"
                                        android:textStyle="bold"></TextView>

                                </LinearLayout>


                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/H_instroment"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="10dp"
                                android:layout_weight="1"
                                android:elevation="10dp"
                                app:cardBackgroundColor="#FCFDFD"
                                app:cardCornerRadius="5dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight=".20"
                                        android:src="@drawable/ing_instroment"

                                        ></ImageView>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight=".80"
                                        android:gravity="center"
                                        android:text="কৃষি যন্ত্রপাতি"
                                        android:textColor="#3BC609"
                                        android:textSize="20sp"
                                        android:textStyle="bold"></TextView>

                                </LinearLayout>


                            </androidx.cardview.widget.CardView>


                        </LinearLayout>
                        <!--                4rd row -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/questionAnswer"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="10dp"
                                android:layout_weight="1"
                                android:elevation="10dp"
                                app:cardBackgroundColor="#FCFDFD"
                                app:cardCornerRadius="5dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <ImageView

                                        android:layout_width="match_parent"
                                        android:layout_height="160dp"
                                        android:layout_weight=".20"
                                        android:src="@drawable/qusandans" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight=".80"
                                        android:gravity="center"
                                        android:text="প্রশ্ন ও উত্তর"
                                        android:textColor="#3BC609"
                                        android:textSize="20sp"
                                        android:textStyle="bold" />

                                </LinearLayout>


                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/H_market_price"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="10dp"
                                android:layout_weight="1"
                                android:elevation="10dp"
                                app:cardBackgroundColor="#FCFDFD"
                                app:cardCornerRadius="5dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight=".20"
                                        android:src="@drawable/img_market_price"></ImageView>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight=".80"
                                        android:gravity="center"
                                        android:text="বাজর দর"
                                        android:textColor="#3BC609"
                                        android:textSize="20sp"
                                        android:textStyle="bold"></TextView>

                                </LinearLayout>


                            </androidx.cardview.widget.CardView>


                        </LinearLayout>


                    </LinearLayout>


                    //horizontal start


                    // ourter 1st end
                </LinearLayout>


        </ScrollView>
        </LinearLayout>

    </RelativeLayout>


</FrameLayout>